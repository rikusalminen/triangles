#version 420

layout(quads, equal_spacing, ccw) in;

void main()
{
    gl_Position = vec4(
            mix(
                mix(gl_in[0].gl_Position.xyz, gl_in[1].gl_Position.xyz, gl_TessCoord.x),
                mix(gl_in[3].gl_Position.xyz, gl_in[2].gl_Position.xyz, gl_TessCoord.x),
                gl_TessCoord.y),
            1.0);

}
