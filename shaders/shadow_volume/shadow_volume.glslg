#version 330

layout(triangles_adjacency) in;
//layout(triangle_strip, max_vertices = 3) out;
layout(line_strip, max_vertices = 6) out;

void main()
{
    for(int i = 0; i < 3; ++i)
    {
        gl_Position = gl_in[(2*i+0)%6].gl_Position;
        EmitVertex();

        gl_Position = gl_in[(2*i+2)%6].gl_Position;
        EmitVertex();

        EndPrimitive();
    }
}
